<h1>New Product</h1>
<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br />
  <%= f.label :price %>
  <%= f.text_field :price %>
  <br />
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br />
  <%= f.label :inventory %>
  <%= f.text_field :inventory %>
  <%= f.submit "submit" %>
<% end %>

<div id=productResult></div>
  <h1 id="productName"></h1>
  <p id="description"></p>
  <p id="price"></p>
  <p id="inventory"></p>
  


<script type="text/javascript" charset="utf-8">
  $(function (){
    $('form').submit(function (event){
      event.preventDefault();
      var values = $(this).serialize();
      var new_product = $.post('/products', values)
      new_product.done(function(data) {
        
      });
    });
  });
</script>
